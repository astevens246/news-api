<% p @news_story %>

<%= form_for @news_story, url: update_news_path(@news_story), method: :patch do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :author %>
        <%= form.text_area :author %>
    </div>
  
    <div>
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
  
    <div>
      <%= form.label :url %>
      <%= form.text_field :url %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
<% end %>